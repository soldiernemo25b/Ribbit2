<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.steve.ribbit2.SignUpActivity"
    style="@style/AuthBackground">

    <ImageView
        android:contentDescription="@string/content_desc_background"
        android:id="@+id/backgroundImage"
        android:src="@drawable/background"
        style="@style/AuthBackgroundImage" />

    <TextView
        android:id="@+id/title"
        android:text="@string/app_name"
        style="@style/AuthTitle"
        android:layout_marginTop="180dp"/>

    <TextView
        android:text="@string/subtitle"
        android:id="@+id/subtitle"
        android:layout_below="@+id/title"
        style="@style/AuthTitle.AuthSubtitle" />

    <LinearLayout
        android:id="@+id/edit_text_layout"
        style="@style/AuthFieldContainer"
        android:layout_width="400dp"
        android:layout_centerHorizontal="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_username"
        android:hint="@string/username_hint"
        style="@style/AuthEditText">
        <requestFocus />
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/sign_up_password"
        android:hint="@string/password_hint"
        style="@style/AuthEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/sign_up_email"
        android:hint="@string/email_hint"
        style="@style/AuthEditText"/>
    </LinearLayout>

    <ImageView
        android:contentDescription="@string/content_desc_button_divider"
        android:id="@+id/buttonDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_layout"
        android:layout_centerHorizontal="true"
        android:src="@drawable/button_divider"/>

    <Button
        android:text="@string/sign_up_button_label"
        android:id="@+id/sign_up_button"
        style="@style/AuthButton"
        android:layout_below="@+id/edit_text_layout"
        android:layout_alignLeft="@+id/edit_text_layout"
        android:layout_toLeftOf="@id/buttonDivider"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"/>

    <Button
        android:text="@string/cancel_button_label"
        android:id="@+id/cancel_button"
        style="@style/AuthButton"
        android:layout_below="@+id/edit_text_layout"
        android:layout_alignRight="@+id/edit_text_layout"
        android:layout_toRightOf="@id/buttonDivider"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>

</RelativeLayout>
